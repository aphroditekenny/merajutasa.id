#!/bin/sh

echo "[pre-push] Running governance:verify (Wave 0 fail-fast)"
# Call Node script directly to avoid shell/npm portability issues
if ! command -v node >/dev/null 2>&1; then
	echo "[pre-push] node not found in PATH"
	exit 127
fi
node tools/governance-verify.js || { echo "[pre-push] governance:verify failed â€“ aborting push"; exit 1; }

echo "[pre-push] Success"
