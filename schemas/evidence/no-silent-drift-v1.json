{
  "$schema":"http://json-schema.org/draft-07/schema#",
  "$id":"https://merajutasa.id/schemas/evidence/no-silent-drift-v1.json",
  "title":"No Silent Drift Aggregator Report v1",
  "type":"object",
  "required":["timestamp_utc","components","summary","status"],
  "properties":{
    "timestamp_utc":{"type":"string"},
    "components":{"type":"object","additionalProperties":{"type":"string"}},
    "summary":{"type":"object","properties":{
      "hype_hits":{"type":"number"},
      "hype_max_severity":{"type":["string","null"]},
      "hype_high":{"type":"number"},
      "hype_medium":{"type":"number"},
      "hype_rule_counts":{"type":"object","additionalProperties":{"type":"number"}},
      "param_mismatches":{"type":["number","null"]},
      "principles_entries":{"type":"number"},
      "pii_critical":{"type":"number"},
      "pii_total":{"type":"number"},
      "disclaimers_errors":{"type":"number"},
      "disclaimers_warnings":{"type":"number"},
      "disclaimers_rule_counts":{"type":"object","additionalProperties":{"type":"number"}}
    }},
    "status":{"type":"string","enum":["PASS","ADVISORY","FAIL"]}
  },
  "additionalProperties": true
}
