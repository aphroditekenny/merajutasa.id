{
  "$schema":"http://json-schema.org/draft-07/schema#",
  "$id":"https://merajutasa.id/schemas/evidence/principles-impact-v2.json",
  "title":"Principles Impact Report v2",
  "type":"object",
  "required":["version","generated_utc","principles","summary"],
  "properties":{
    "version":{"type":"number","const":2},
    "generated_utc":{"type":"string"},
    "principles":{"type":"array","items":{"type":"object","required":["principle","match_count","domains","inferredImpact","confidence"],"properties":{
      "principle":{"type":"string"},
      "match_count":{"type":"number"},
      "domains":{"type":"array","items":{"type":"string"}},
      "inferredImpact":{"type":"boolean"},
      "confidence":{"type":"number","minimum":0,"maximum":1},
      "evidence_sample":{"type":"array","items":{"type":"object"}},
      "evidence_truncated":{"type":"boolean"}
    } }},
    "summary":{"type":"object","required":["total_principles","impacted","average_confidence","max_confidence"],"properties":{
      "total_principles":{"type":"number"},
      "impacted":{"type":"number"},
      "average_confidence":{"type":"number"},
      "max_confidence":{"type":"number"}
    }}
  },
  "additionalProperties": false
}
